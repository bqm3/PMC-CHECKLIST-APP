{
  "expo": {
    "name": "Checklist",
    "slug": "PMC-CHECKLIST-APP",
    "version": "2.1.9",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash_background.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "jsEngine": "hermes", // cấu hình IOS Podfile
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#ffffff",
      "iosDisplayInForeground": true,
      "androidMode": "default"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "userInterfaceStyle": "automatic",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.anonymous.PMCCHECKLISTAPP",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
       "runtimeVersion": "2.1.8",
      "userInterfaceStyle": "automatic"
    },
    "ios": {
     
      "supportsTablet": false,
      "userInterfaceStyle": "automatic",
      "splash": {
        "image": "./assets/splash_background.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "buildNumber": "7",
      "bundleIdentifier": "com.anonymous.PMCCHECKLISTAPP",
      "runtimeVersion": "2.1.8",
      "infoPlist": {
        "NSCameraUsageDescription": "The app needs access to your camera to capture images during the checklist process, document areas with incidents, and scan QR codes for asset verification.",
        "NSMicrophoneUsageDescription": "The app needs access to your microphone so you can record and upload audio recordings.",
        "NSLocationWhenInUseUsageDescription": "The app needs access to your location to provide suggestions about nearby places and improve your experience."
      }
    },
    "web": {
      "favicon": "./assets/icon.png",
      "userInterfaceStyle": "automatic"
    },
    "plugins": [
      [
        "expo-build-properties", 
        {
          "android": {
            "usesCleartextTraffic": true,
            "compileSdkVersion": 35,  
            "targetSdkVersion": 35 
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "The app needs access to your camera so you can take and upload profile pictures or scan QR codes.",
          "microphonePermission": "The app needs access to your microphone so you can record and upload audio recordings."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "The app needs access to your location to provide suggestions about nearby places and improve your experience."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "updates": {
      "url": "https://u.expo.dev/05bff8c3-b200-4e8a-8141-955aa19fa0f7"
    },
    "owner": "pmcvnpt",

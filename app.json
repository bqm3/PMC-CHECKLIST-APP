{
  "expo": {
    "name": "PMC Checklist",
    "slug": "PMC-CHECKLIST-APP",
    // "newArchEnabled": true,
    "version": "2.1.7", // v2.2.0
    "orientation": "portrait",

    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/bg.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#ffffff",
      "iosDisplayInForeground": true,
      "androidMode": "default"
    },
    "assetBundlePatterns": ["**/*"],
    "userInterfaceStyle": "automatic",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "versionCode": 1,
      "package": "com.anonymous.PMCCHECKLISTAPP",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "runtimeVersion": {
        "policy": "appVersion"
      },
      "userInterfaceStyle": "automatic"
    },
    "ios": {
      "supportsTablet": false,
      "userInterfaceStyle": "automatic",
      "splash": {
        "image": "./assets/bg.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "buildNumber": "7",
      "bundleIdentifier": "com.anonymous.PMCCHECKLISTAPP",
      "runtimeVersion": {
        "policy": "sdkVersion"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "The app needs access to your camera to capture images during the checklist process, document areas with incidents, and scan QR codes for asset verification.",
        "NSMicrophoneUsageDescription": "The app needs access to your microphone so you can record and upload audio recordings.",
        "NSLocationWhenInUseUsageDescription": "The app needs access to your location to provide suggestions about nearby places and improve your experience."
      }
    },
    "web": {
      "favicon": "./assets/icon.png",
      "userInterfaceStyle": "automatic"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "The app needs access to your camera so you can take and upload profile pictures or scan QR codes.",
          "microphonePermission": "The app needs access to your microphone so you can record and upload audio recordings."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
     
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "The app needs access to your location to provide suggestions about nearby places and improve your experience."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "88067883-8168-4e0c-8f05-124ae86a6067"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/88067883-8168-4e0c-8f05-124ae86a6067"
    },
    "owner": "buiminh30"
  }
}
